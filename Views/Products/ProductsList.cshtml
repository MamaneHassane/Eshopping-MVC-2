@model IEnumerable<Eshopping_MVC.Models.Product>

@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <title>Catalogue des produits</title>
</head>
<body>
<div class="container">
    <h1>Catalogue</h1>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4">
                <div class="card">
                    <img src="~/@product.ImageUrl" class="card-img-top" alt="@product.Name"/>
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <div class="btn-group">
                            <a href="@Url.Action("ProductAdded", new { id = product.productId })" class="btn btn-primary">DÃ©tails</a>
                            <a href="@Url.Action("EditProduct", new { id = product.productId })" class="btn btn-warning">Modifier</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
</body>
</html>