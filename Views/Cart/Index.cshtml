@model IEnumerable<Eshopping_MVC.Models.Product>

@{
    ViewData["Title"] = "Your Shopping Cart";
}

<h1>Your Shopping Cart</h1>

<a class="btn btn-danger" href="@Url.Action("Logout", "Auth")">DÃ©connexion</a>
<br/>
<a class="btn btn-warning" href="@Url.Action("DeleteCart", "Cart")">Vider le panier</a>
<br/>
@if (ViewBag.IsEmptyCart != null && (bool)ViewBag.IsEmptyCart)
{
    <p>Panier vide</p>
}
else
{
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4">
                <div class="card">
                    <img src="~/@product.ImageUrl" class="card-img-top" alt="@product.Name"/>
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p>Quantity: @product.Quantity</p>
                        <a href="@Url.Action("RemoveFromCart", new { id = product.productId })" class="btn btn-danger">Remove from Cart</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <div>
        <a href="@Url.Action("Checkout")" class="btn btn-success">Proceed to Checkout</a>
    </div>
}
